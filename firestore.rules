rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Keep your secret in a single doc:
    // /meta/auth { secret: "MY_SUPER_SECRET_KEY" }
    match /meta/{docId} {
      allow read, write: if false; // nobody can touch or read meta
    }

    match /iceTea/{docId} {
      // Allow create only if request carries the correct secret
      allow create: if request.resource.data.secret ==
        get(/databases/$(database)/documents/meta/auth).data.secret;

      // Allow read, update, delete only if the stored doc has the correct secret
      allow read, update, delete: if resource.data.secret ==
        get(/databases/$(database)/documents/meta/auth).data.secret;
    }
  }
}
